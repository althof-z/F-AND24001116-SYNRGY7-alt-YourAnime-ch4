<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.chapter_4_challenge.fragments.FirstFragment"
        android:label="Your Anime List"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_firstFragment_to_animeGenreFragment"
            app:destination="@id/animeGenreFragment" />
        <action
            android:id="@+id/action_firstFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_firstFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/animeGenreFragment"
        android:name="com.example.chapter_4_challenge.fragments.AnimeGenreFragment"
        android:label="Anime Genre"
        tools:layout="@layout/fragment_anime_genre" >
        <action
            android:id="@+id/action_animeGenreFragment_to_animeListFragment"
            app:destination="@id/animeListFragment" />
    </fragment>
    <fragment
        android:id="@+id/animeListFragment"
        android:name="com.example.chapter_4_challenge.fragments.AnimeListFragment"
        android:label="Anime List"
        tools:layout="@layout/fragment_anime_list">

        <argument
            android:name="currentGenre"
            app:argType="string"
            android:defaultValue=""/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.chapter_4_challenge.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.chapter_4_challenge.fragments.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>